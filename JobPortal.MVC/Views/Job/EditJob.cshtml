@model JobPortal.MVC.ViewModels.JobViewModel

<div class="container my-5">
    <h2 class="text-center mb-4">İlan Düzenle</h2>

    <form asp-action="EditJob" method="post">
        <input type="hidden" asp-for="Job.Id" />

        <div class="mb-3">
            <label for="Title" class="form-label">Başlık:</label>
            <input type="text" id="Title" name="Job.Title" class="form-control" value="@Model.Job.Title" required />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Açıklama:</label>
            <textarea id="Description" name="Job.Description" class="form-control" rows="5" required>@Model.Job.Description</textarea>
        </div>

        <div class="mb-3">
            <label for="Location" class="form-label">Konum:</label>
            <input type="text" id="Location" name="Job.Location" class="form-control" value="@Model.Job.Location" required />
        </div>

        <div class="mb-3">
            <label for="Salary" class="form-label">Maaş:(Maaş bilgisi adayla paylaşılmayacaktır.)</label>
            <input type="number" id="Salary" name="Job.Salary" class="form-control" value="@Model.Job.Salary.ToString("F0")" required />
        </div>

        <div class="mb-3">
            <label for="JobType" class="form-label">İş Türü:</label>
            <select asp-for="JobType" asp-items="Model.JobTypes" class="form-select" required>
                <option value="">İş Türü Seçin</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="WorkType" class="form-label">Çalışma Türü:</label>
            <select asp-for="WorkType" asp-items="Model.WorkTypes" class="form-select" required>
                <option value="">Çalışma Türü Seçin</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="SectorId" class="form-label">Sektör:</label>
            <select asp-for="SectorId" asp-items="Model.Sectors" class="form-select" required>
                <option value="">Sektör Seçin</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="DepartmentId" class="form-label">Departman:</label>
            <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select" required>
                <option value="">Departman Seçin</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100">Güncelle</button>
    </form>
</div>