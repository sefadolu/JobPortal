@model IEnumerable<JobPortal.Entities.Models.Concrete.JobSeeker>

<h2>Başvuran Adaylar</h2>

@if (Model != null && Model.Any())
{
    <ul style="list-style-type: none; padding: 0;">
        @foreach (var applicant in Model)
        {
            <li style="text-align: center; margin-bottom: 30px; border-bottom: 1px solid #ddd; padding-bottom: 20px;">
                <!-- Profil Fotoğrafı: En üstte yuvarlak şekilde ortalanmış -->
                <div style="margin-bottom: 10px;">
                    <img src="@Url.Content($"~/profilepictures/{applicant.ProfilePicture}")" alt="Profil Fotoğrafı"
                         style="width: 120px; height: 120px; border-radius: 50%; object-fit: contain;" />
                </div>

                <!-- Adı, Email, Telefon ve CV linki: Ortalanmış şekilde -->
                <div>
                    <strong>Adı Soyadı:</strong> @applicant.FirstName @applicant.LastName <br />
                    <strong>Email:</strong> @applicant.Email <br />
                    <strong>Telefon:</strong> @applicant.PhoneNumber <br />
                    <strong>Adres:</strong> @applicant.Address <br />
                    <strong>Yetenekler:</strong> @applicant.Skills <br />

                    <strong>Özgeçmiş:</strong>
                    <a href="@Url.Content($"~/resumes/{applicant.Resume}")" target="_blank">CV'yi Görüntüle</a>
                </div>
                <!-- Eğitim Bilgileri -->
                @if (applicant.Educations != null && applicant.Educations.Any())
                {
                    <div style="margin-top: 20px;">
                        <h3>Eğitim Bilgileri</h3>
                        <ul style="list-style-type: none; padding: 0;">
                            @foreach (var education in applicant.Educations)
                            {
                                <li>
                                    <strong>Okul Adı:</strong> @education.SchoolName <br />
                                    <strong>Bölüm:</strong> @education.Department <br />
                                    <strong>Mezuniyet Derecesi:</strong> @education.GraduationDegree <br />
                                    <strong>Mezuniyet Durumu:</strong> @education.Status <br />
                                    <strong>Mezuniyet Yılı:</strong> @education.GraduationYear <br />
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div style="margin-top: 10px;">
                        <strong>Eğitim Bilgisi bulunmamaktadır.</strong>
                    </div>
                }

                <!-- Sertifika Bilgileri -->
                @if (applicant.Certifications != null && applicant.Certifications.Any())
                {
                    <div style="margin-top: 20px;">
                        <h3>Sertifika Bilgileri</h3>
                        <ul style="list-style-type: none; padding: 0;">
                            @foreach (var certification in applicant.Certifications)
                            {
                                <li>
                                    <strong>Kurum Adı:</strong> @certification.InstitutionName <br />
                                    <strong>Sertifika Adı:</strong> @certification.CertificateName <br />
                                    <strong>Alınma Tarihi:</strong> @certification.CertificationDate.ToString("dd/MM/yyyy") <br />
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div style="margin-top: 10px;">
                        <strong>Sertifika Bilgisi bulunmamaktadır.</strong>
                    </div>
                }

            </li>
        }
    </ul>
}
else
{
    <p>Bu ilana henüz başvuran yok.</p>
}