@model JobPortal.Entities.Models.Concrete.Job

<h2>İş İlanı Ver</h2>

<form asp-action="AddJob" method="post">
    <div>
        <label for="Title">Başlık:</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div>
        <label for="Description">Açıklama:</label>
        <textarea id="Description" name="Description" rows="5" required>@Model.Description</textarea>
    </div>

    <div>
        <label for="Location">Konum:</label>
        <input type="text" id="Location" name="Location" value="@Model.Location" required />
    </div>

    <div>
        <label for="Salary">Maaş:</label>
        <input type="number" id="Salary" name="Salary" value="@Model.Salary" required />
    </div>

    <div>
        <label for="SectorId">Sektör:</label>
        @Html.DropDownList("SectorId", new SelectList(ViewBag.Sectors, "Id", "Name"), "Sektör Seçin", new { @class = "form-control", required = "required" })
    </div>

    <div>
        <label for="DepartmentId">Departman:</label>
        @Html.DropDownList("DepartmentId", new SelectList(ViewBag.Departments, "Id", "Name"), "Departman Seçin", new { @class = "form-control", required = "required" })
    </div>

    <button type="submit">İlan Ver</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}