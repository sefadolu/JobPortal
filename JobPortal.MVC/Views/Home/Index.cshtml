@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container text-center">
    <header class="my-5">
        <img src="~/images/logo8.png" alt="Site Logosu" class="img-fluid mx-auto d-block" style="max-width: 500px; background-color: transparent;" />
    </header>

    <nav class="mt-3">
        <!-- mt-5'ten mt-3'e çekerek yukarı alıyoruz -->
        <!-- İş Arayan dropdown -->
        <div class="dropdown mb-3 custom-dropdown">
            <button class="btn btn-lg btn-dark dropdown-toggle w-100" type="button" id="jobSeekerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                İş Arayan
            </button>
            <ul class="dropdown-menu rounded-corners" aria-labelledby="jobSeekerDropdown">
                <li><a class="dropdown-item" href="@Url.Action("Login", "JobSeekerLogin")">Giriş Yap</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Register", "JobSeekerRegister")">Kayıt Ol</a></li>
            </ul>
        </div>

        <!-- İşveren dropdown -->
        <div class="dropdown custom-dropdown">
            <button class="btn btn-lg btn-dark dropdown-toggle w-100" type="button" id="employerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                İşveren
            </button>
            <ul class="dropdown-menu rounded-corners" aria-labelledby="employerDropdown">
                <li><a class="dropdown-item" href="@Url.Action("Login", "EmployerLogin")">Giriş Yap</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Register", "EmployerRegister")">Kayıt Ol</a></li>
            </ul>
        </div>
    </nav>
</div>

<style>
    body {
        background-color: #ffffff;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    header img {
        max-width: 500px;
        height: auto;
        background-color: transparent;
    }

    .container {
        background-color: #ffffff;
    }

    .dropdown {
        display: inline-block;
        margin-right: 20px;
        width: 200px;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-dark:hover {
            background-color: #495057;
            border-color: #495057;
        }

    .dropdown-menu {
        max-height: 100px; /* Açılır menünün yüksekliğini kısıtlıyoruz */
        overflow-y: auto; /* Gerektiğinde scrollbar oluşturulacak */
        border-radius: 10px; /* Köşeleri yuvarlıyoruz */
        padding: 5px; /* İçerik boşluğunu azaltıyoruz */
    }

        .dropdown-menu a {
            padding: 8px;
            font-size: 14px;
            text-align: center; /* Metinlerin ortalanması */
        }

    /* Sadece Index.cshtml'deki dropdownları ortalayacak CSS */
    .custom-dropdown .dropdown-menu {
        left: 50%;
        transform: translateX(-50%);
        width: 200px; /* Menü genişliği buton genişliğine uygun */
    }

    /* İş arayan ve işveren butonlarını yukarıya çekme */
    nav.mt-3 {
        margin-top: 0.5rem; /* Butonları 4 cm (1.5 rem) yukarı çekiyoruz */
    }
</style>