@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container text-center">
    <header class="my-4">
        <img src="~/images/logo8.png" alt="Site Logosu" class="img-fluid mx-auto d-block" style="max-width: 500px; background-color: transparent;" />
    </header>

    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("JobSeeker"))
        {
            <div class="alert alert-success mt-3">
                <h3>Size Uygun İş İlanları İçin</h3>
            </div>
            <div class="d-grid gap-2">
                <a href="@Url.Action("JobList", "JobAdvert")" class="btn btn-dark btn-lg mt-2">İş İlanları</a> 
            </div>
        }
        else if (User.IsInRole("Employer"))
        {
            <div class="d-grid gap-2">
                <a href="@Url.Action("JobList", "Job")" class="btn btn-dark btn-lg">İlanlarım</a>
                <a href="@Url.Action("AddJob", "Job")" class="btn btn-dark btn-lg">İş İlanı Ver</a>
            </div>
        }
    }
    else
    {
        <nav class="mt-3">
            <div class="dropdown mb-3 custom-dropdown">
                <button class="btn btn-lg btn-dark dropdown-toggle w-100" type="button" id="jobSeekerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    İş Arayan
                </button>
                <ul class="dropdown-menu rounded-corners" aria-labelledby="jobSeekerDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Login", "JobSeekerLogin")">Giriş Yap</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Register", "JobSeekerRegister")">Kayıt Ol</a></li>
                </ul>
            </div>

            <div class="dropdown custom-dropdown">
                <button class="btn btn-lg btn-dark dropdown-toggle w-100" type="button" id="employerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    İşveren
                </button>
                <ul class="dropdown-menu rounded-corners" aria-labelledby="employerDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Login", "EmployerLogin")">Giriş Yap</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Register", "EmployerRegister")">Kayıt Ol</a></li>
                </ul>
            </div>
        </nav>
    }
</div>

<style>
    body {
        background-color: #ffffff;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    header img {
        max-width: 500px;
        height: auto;
        background-color: transparent;
    }

    .container {
        background-color: #ffffff;
    }

    .dropdown {
        display: inline-block;
        margin-right: 20px;
        width: 200px;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-dark:hover {
            background-color: #495057;
            border-color: #495057;
        }

    .dropdown-menu {
        overflow-y: auto;
        border-radius: 10px;
        padding: 5px;
    }

        .dropdown-menu a {
            padding: 8px;
            font-size: 14px;
            text-align: center;
        }

    .custom-dropdown .dropdown-menu {
        left: 50%;
        transform: translateX(-50%);
        width: 200px;
    }

    .alert-success {
        margin-top: -10px;
    }

    .d-grid {
        margin-top: -5px; 
        margin-bottom: 40px; 
    }
</style>