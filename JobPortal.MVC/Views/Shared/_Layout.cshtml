<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Navbar stilini ekleyelim */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 10px;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 8px 16px;
        }

        .navbar-right a, .dropdown button {
            color: white;
        }

        .navbar a:hover {
            background-color: #575757;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropbtn {
            background-color: #333;
            color: white;
            padding: 8px 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #575757;
        }

        .container {
            padding: 20px;
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #333;
            color: white;
            position: absolute;
            width: 100%;
            bottom: 0;
        }

        button[type="submit"] {
            background-color: #333;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #575757;
        }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left">
                <a href="@Url.Action("Index", "Home")">JobPortal</a>
            </div>
            <div class="navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="dropbtn">@User.Identity.Name</button>
                        <div class="dropdown-content">
                            <a href="@Url.Action("Profile", "JobSeekerProfile")">Profil</a>
                            <form method="post" action="@Url.Action("Logout", "Account")" style="margin: 0;">
                                <button type="submit">Çıkış Yap</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">Giriş Yap</a>
                }
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2024 - JobPortal</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>