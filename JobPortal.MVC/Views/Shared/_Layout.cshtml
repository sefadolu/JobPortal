<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left">
                <a href="@Url.Action("Index", "Home")">JobPortal</a>
            </div>
            <div class="navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                        <div class="dropdown">
                            <button class="dropbtn">@User.Identity.Name</button>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Profile", "Account")">Profil</a>
                                <form method="post" action="@Url.Action("Logout", "Account")">
                                    <button type="submit">Çıkış Yap</button>
                                </form>
                            </div>
                        </div>
                }
                else
                {
                        <a href="@Url.Action("Login", "Account")">Giriş Yap</a>
                }
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2024 - JobPortal</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>