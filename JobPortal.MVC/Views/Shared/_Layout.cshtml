<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #343a40;
        }

        .navbar-nav {
            display: flex;
            align-items: center; /* Butonları dikeyde hizala */
        }

            .navbar-nav .nav-item {
                display: inline-flex;
                align-items: center;
            }

            .navbar-nav .nav-link {
                padding: 0 20px; /* Yatay boşlukları dengelemek için */
                margin: 0;
                line-height: 40px; /* Aynı yükseklikte hizalanması için */
                height: 40px; /* İki öğe de aynı yüksekliğe sahip olacak */
                display: flex;
                align-items: center; /* Dikey ortalama */
            }

            .navbar-nav .dropdown-toggle {
                padding-right: 20px;
                margin: 0;
                width: auto;
            }

        .navbar .navbar-nav .nav-link {
            color: white;
        }

            .navbar .navbar-nav .nav-link:hover {
                background-color: #495057;
            }

        .dropdown-menu {
            left: auto;
            right: 0; /* Sağa hizala */
    min-width: 180px; /* Genişliği arttıralım */
            border-radius: 5px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            background-color: #343a40;
            color: white;
        }

            .dropdown-menu a {
                color: white;
                padding: 10px;
                text-align: left;
                font-weight: bold;
            }

                .dropdown-menu a:hover {
                    background-color: #495057;
                    color: #ffffff;
                }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 20px;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        button[type="submit"] {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px 20px;
        }

            button[type="submit"]:hover {
                background-color: #495057;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">JobPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("JobList", "JobAdvert")">İş İlanları</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (User.IsInRole("JobSeeker"))
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Profile", "JobSeekerProfile")">Profil</a></li>
                                    }
                                    else if (User.IsInRole("Employer"))
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Profile", "EmployerProfile")">Profil</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("AddJob", "Job")">İş İlanı Ver</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("JobList", "Job")">İlanlarım</a></li>
                                    }
                                    <li>
                                        <form method="post" action="@Url.Action("Logout", "Account")" style="margin: 0;">
                                            <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Giriş Yap
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="loginDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Login", "JobSeekerLogin")">İş Arayan Girişi</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Login", "EmployerLogin")">İşveren Girişi</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-5">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2024 - JobPortal</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
