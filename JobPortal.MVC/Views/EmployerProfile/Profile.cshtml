@model JobPortal.Entities.Models.Concrete.Employer

<div class="container my-5">
    @if (!string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["Message"]))
    {
        <div class="alert alert-success text-center">
            @ViewContext.HttpContext.Request.Query["Message"]
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h2>İşveren Profil</h2>
                </div>
                <div class="card-body">
                    <h3 class="mb-4">Şirket Bilgileri</h3>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Şirket Adı:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span>@Model.CompanyProfile?.CompanyName</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Email:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span>@Model.Email</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Telefon Numarası:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span>@Model.CompanyProfile?.PhoneNumber</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Website:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span><a href="@Model.CompanyProfile?.Website" target="_blank">@Model.CompanyProfile?.Website</a></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Lokasyon:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span>@Model.CompanyProfile?.Location</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label><strong>Şirket Açıklaması:</strong></label>
                        </div>
                        <div class="col-md-8">
                            <span>@Model.CompanyProfile?.Description</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("EditProfile", "EmployerProfile")" class="btn btn-dark">Profili Düzenle</a>
                        <a href="@Url.Action("ChangePassword", "EmployerProfile")" class="btn btn-dark">Şifremi Değiştir</a>
                    </div>

                    <div class="mt-5">
                        <form method="post" asp-action="DeleteAccount">
                            <button type="submit" class="btn btn-dark w-100" onclick="return confirm('Hesabınızı silmek istediğinizden emin misiniz?');">Hesabımı Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>